# ===========================================
# Teams Message Extractor - Environment Configuration
# ===========================================

# Node Environment
NODE_ENV=production

# Backend API Configuration
PORT=5000
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://teams_admin:secure_password_here@postgres:5432/teams_extractor

# For direct connection (alternative to DATABASE_URL)
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432
# POSTGRES_DB=teams_extractor
# POSTGRES_USER=teams_admin
# POSTGRES_PASSWORD=secure_password_here

# PostgreSQL Admin Credentials (for initial setup)
POSTGRES_ADMIN_USER=teams_admin
POSTGRES_ADMIN_PASSWORD=secure_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Cache Configuration
REDIS_CACHE_TTL=3600
REDIS_DEDUP_TTL=86400

# MCP Server Configuration
MCP_DATABASE_URL=postgresql://mcp_reader:mcp_reader_password@postgres:5432/teams_extractor
MCP_PORT=3001

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WS_URL=http://localhost:5000

# Chrome Extension Configuration
EXTENSION_API_URL=http://localhost:5000/api
EXTENSION_BATCH_SIZE=50
EXTENSION_INTERVAL=5000

# Security Settings
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_SECRET=your_session_secret_here_change_in_production

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Optional)
GRAFANA_ADMIN_PASSWORD=admin_password_here
PROMETHEUS_RETENTION_TIME=15d

# Backup Configuration
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=7

# Email Notifications (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@teams-extractor.local

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true

# Docker Configuration
COMPOSE_PROJECT_NAME=teams-extractor
DOCKER_BUILDKIT=1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
