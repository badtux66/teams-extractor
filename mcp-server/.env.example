# MCP Server Environment Configuration
# Copy this file to .env and update with your values

# PostgreSQL Database Connection
# This should be a read-only user for security
MCP_DATABASE_URL=postgresql://mcp_reader:mcp_reader_password@localhost:5432/teams_extractor

# Alternative: Individual connection parameters
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=teams_extractor
# PGUSER=mcp_reader
# PGPASSWORD=mcp_reader_password

# Debug Mode (optional)
# DEBUG=mcp:*

# Connection Pool Settings (optional)
# MAX_POOL_SIZE=5
# IDLE_TIMEOUT_MS=30000
# CONNECTION_TIMEOUT_MS=2000
